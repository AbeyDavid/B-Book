                    data-scrollax-parent="true"
                >
                    <div
                        class="one-third order-md-last img js-fullheight"
                        style="background-image: url('/bannerImages/<%= banner[0].bannerimage[0]%>')"
                    ></div>
                    <div
                        class="one-forth d-flex js-fullheight align-items-center ftco-animate"
                        data-scrollax=" properties: { translateY: '70%' }"
                    >
                        <div class="text">
                            <span class="subheading text-dark">B book eCommerce Shop</span>
                            <div class="horizontal">
